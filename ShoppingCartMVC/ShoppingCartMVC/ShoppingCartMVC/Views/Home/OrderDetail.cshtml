@model IEnumerable<ShoppingCartMVC.Models.tblOrder>

<div class="container">

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblInvoice.TblUser.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TblInvoice.Bill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblInvoice.Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblInvoice.InvoiceDate)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.TblInvoice.Status)
            </th>*@

            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TblInvoice.TblUser.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TblInvoice.Bill)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TblInvoice.Payment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TblInvoice.InvoiceDate)
                </td>
                @*<th>
                    @Html.DisplayFor(model => item.TblInvoice.Status)
                </th>*@

                <td>
                    <span class="btn btn-success">Approve</span>
                </td>
                <td>
                    <a href="@Url.Action("Invoice", "Home", new { id = item.InvoiceId })" class="btn btn-primary">Print</a>
                </td>

            </tr>
        }

    </table>

</div>
